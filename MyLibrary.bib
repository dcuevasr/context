@article{Sjoerds_Slips_2016,
  title = {Slips of {{Action}} and {{Sequential Decisions}}: {{A Cross}}-{{Validation Study}} of {{Tasks Assessing Habitual}} and {{Goal}}-{{Directed Action Control}}},
