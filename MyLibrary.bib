  journal = {Proceedings of the National Academy of Sciences},
  language = {en},
  number = {18},
  pmid = {12193650}
}

@article{Fiser_Statistically_2010,
  title = {Statistically Optimal Perception and Learning: From Behavior to Neural Representations.},
