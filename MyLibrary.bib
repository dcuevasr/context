@article{Lutz_Sleep_2018,
  title = {Sleep {{Strengthens Predictive Sequence Coding}}},
  author = {Lutz, Nicolas D. and Wolf, Ines and H{\"u}bner, Stefanie and Born, Jan and Rauss, Karsten},
