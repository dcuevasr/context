@article{Friston_Active_2015,
  title = {Active Inference and Epistemic Value},
  author = {Friston, Karl and Rigoli, Francesco and Ognibene, Dimitri and Mathys, Christoph and Fitzgerald, Thomas and Pezzulo, Giovanni},
