  author = {Beck, Jeffrey M. and Ma, Wei Ji and Kiani, Roozbeh and Hanks, Tim and Churchland, Anne K. and Roitman, Jamie and Shadlen, Michael N. and Latham, Peter E. and Pouget, Alexandre},
